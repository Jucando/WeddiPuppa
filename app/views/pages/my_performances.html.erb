<div class="main-container">
  <div class="left-nav">
    <div class="left-links">
      <%= render 'pages/dashboard-left-nav-bar' %>
    </div>
  </div>
  <div class="body-nav">
    <div class="body-cards">
      <div class="section">
        <h1>My performances</h1>
      </div>
        <div class="scrollbar" style="height: 535px;">
          <div class="row">
            <div class="block">
              <div class="row">
                <% @performances.each do |performance| %>
                  <div class="col-xs-12 col-sm-4">
                    <div class="card">
                      <%= link_to "", performance_path(performance), class: "card-link" %>
                      <div class="card-upper-section" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= performance.smart_image_url%>')">
                        <p> <%= performance.category %></p>
                      </div>
                      <div class="card-sub-section">
                        <h2><%= performance.title.capitalize %></h2>
                        <span> <%= performance.price %> â‚¬</span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
