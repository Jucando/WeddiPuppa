<div class="adv-card">
  <div class="adv-card-left" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @performance.smart_image_url %>')">
  </div>
  <div class="adv-card-right">
    <% if @reservation %>
        <%= render 'form' %>
    <% else %>
        <div class="adv-card-right-top">
          <div class="advanced-card-right-top-title">
            <h1><%= @performance.title %></h1>
          </div>
          <h2><%= @performance.category %></h2>
          <p><%= @performance.description %></p>
        </div>

        <div class="adv-card-right-bottom">
          <p class="adv-card-price"><%= @performance.price %> â‚¬</p>
          <%= link_to "BOOK NOW", new_performance_reservation_path(@performance), class: "btn btn-success" %>
        </div>
    <% end %>
  </div>
</div>
