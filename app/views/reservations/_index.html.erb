<div class="scrollbar" style="height: 535px;">
  <div class="row">
    <div class="block">
      <% reservations.each do |reservation| %>
        <div class="info">
          <div class="top">
            <h2><%= reservation.performance.title %></h2>
          </div>
          <div class="rating">
            <%= User.find(reservation.performance.user_id).email %>
          </div>
          <div class="date">
            <%= reservation.date %>
          </div>
          <div class="price">
            <%= reservation.performance.price %>
          </div>
          <div class="text">
            <%= reservation.performance.description %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
